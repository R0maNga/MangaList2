<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="MissingDefaultResource">

    <ImageView
        android:id="@+id/iv_my_manga_poster"
        android:layout_width="84dp"
        android:layout_height="108dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:contentDescription="@string/manga_item" />

    <TextView
        android:id="@+id/tv_my_manga_list_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_my_manga_poster"
        app:layout_constraintTop_toTopOf="@+id/iv_my_manga_poster"
        tools:text="Name" />

    <TextView
        android:id="@+id/tv_my_manga_list_rating"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_my_manga_list_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_my_manga_list_name"
        tools:text="Rating" />

    <TextView
        android:id="@+id/tv_my_manga_list_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_my_manga_list_rating"
        app:layout_constraintTop_toBottomOf="@+id/tv_my_manga_list_rating"
        tools:text="Status" />

</androidx.constraintlayout.widget.ConstraintLayout>